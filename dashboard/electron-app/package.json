{
  "name": "dax13-dashboard",
  "version": "1.0.0",
  "description": "DAX-13 Test Results Desktop Widget",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-packager . DAX13-Dashboard --platform=darwin --arch=x64 --out=dist --overwrite"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3"
  },
  "build": {
    "appId": "com.dax13.dashboard",
    "productName": "DAX-13 Dashboard",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
