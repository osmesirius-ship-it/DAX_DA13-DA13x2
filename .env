# DAX DA13-DA13x2 Environment Configuration
# Copy this file to .env and fill in your actual values

# X.AI API Configuration
XAI_API_KEY=your_actual_api_key_here
XAI_MODEL=grok-4

# DAX System Configuration
DAX_ENV=development
LOG_LEVEL=debug
CONFIG_PATH=/Users/user/projects/DAX_DA13-DA13x2/config
BELIEFS_PATH=/Users/user/projects/DAX_DA13-DA13x2/data/beliefs
LOGS_PATH=/Users/user/projects/DAX_DA13-DA13x2/logs
TEMP_PATH=/Users/user/projects/DAX_DA13-DA13x2/temp

# Governance Configuration
GOVERNANCE_MODE=strict
ENABLE_LOOP_ENFORCEMENT=true
ENABLE_MYSTICAL_MODE=true
BELIEF_THRESHOLD_COHERENCE=0.8
BELIEF_THRESHOLD_RELIABILITY=0.75
BELIEF_THRESHOLD_HALLUCINATION_RISK=0.3

# Performance Configuration
MAX_ITERATIONS=3
CHARACTER_THRESHOLD=0.7
RESPONSE_TIMEOUT=30000

# Development Configuration
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_STATE_PERSISTENCE=true
